<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="openmrs.patient.registered">
        <from uri="openmrs-fhir:{{openmrs.baseUrl}}/ws/fhir2/R4/Patient?username={{openmrs.username}}&password={{openmrs.password}}&eventTypes=CREATED"/>
        
        <log message="Patient registered event received: ${body}"/>
        
        <to uri="rabbitmq:o3.events?connectionFactory=rabbitConnectionFactory&routingKey=openmrs.patient.registered&exchangeType=topic"/>
    </route>
</routes>
