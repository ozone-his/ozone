<odoo>
  <record id="view_move_form_insurance" model="ir.ui.view">
    <field name="name">account.move.form.insurance.claim</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[@name='invoice_tab']" position="before">
        <page string="Insurance" name="insurance_tab">
          <group>
            <group>
              <field name="insurance_plan" readonly="1"/>
              <field name="insurance_band" readonly="1"/>
              <field name="facility_uuid"/>
            </group>
            <group>
              <field name="claim_id" readonly="1"/>
              <field name="claim_status" readonly="1"/>
            </group>
          </group>
          <footer>
            <button name="action_validate_coverage" type="object" class="btn-primary" string="Validate Coverage"/>
            <button name="action_submit_claim" type="object" class="btn-secondary" string="Submit Claim" attrs="{'invisible': [('claim_id', '!=', False)]}"/>
            <button name="action_track_claim" type="object" class="btn-secondary" string="Track Status" attrs="{'invisible': [('claim_id', '=', False)]}"/>
          </footer>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
